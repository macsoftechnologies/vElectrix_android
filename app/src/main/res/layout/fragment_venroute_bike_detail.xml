<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="#fff"
    android:fillViewport="true"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.SplashScreenActivity">

  <androidx.viewpager.widget.ViewPager
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:id="@+id/view_pager"/>

  <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
      android:id="@+id/dots_indicator"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:dotsColor="@color/material_white"
      app:dotsCornerRadius="8dp"
      app:dotsSize="8dp"
      android:layout_marginTop="10dp"
      app:dotsSpacing="4dp"
      app:dotsWidthFactor="2.5"
      app:selectedDotColor="@color/md_blue_200"
      app:progressMode="true"
      />

<!--  <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:id="@+id/dot2"-->
<!--      android:layout_marginTop="10dp"-->
<!--      app:dotsColor="@android:color/holo_orange_light"-->
<!--      app:selectedDotColor="@android:color/holo_orange_dark"-->
<!--      app:dotsSize="15dp"-->
<!--      app:dotsSpacing="5dp"-->
<!--      app:stiffness="300"/>-->



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="168dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:id="@+id/logo_brand_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:fontFamily="@font/lato_bold"
          android:gravity="center"
          android:text="MODEL"
          android:textColor="@color/black"
          android:textSize="@dimen/title_size" />

      <TextView
          android:id="@+id/logo_model_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:fontFamily="@font/lato_regular"
          android:gravity="center"
          android:text="MODEL"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/price"
          android:layout_width="160dp"
          android:layout_height="77dp"
          android:layout_marginLeft="5dp"
          android:layout_marginBottom="-82dp"
          android:background="@drawable/gradient_button"
          android:elevation="10dp"
          android:gravity="center"
          android:padding="16dp"
          android:text="Rs. 6,00,000"
          android:textColor="@color/white"
          android:textSize="@dimen/title_size" />

      <androidx.cardview.widget.CardView
          android:layout_width="160dp"
          android:layout_height="77dp"
          android:layout_gravity="right"
          android:layout_margin="5dp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="10dp"
          app:contentPadding="10dp">

        <TextView
            android:id="@+id/book_test_drive"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="BOOK TEST RIDE"
            android:textColor="@color/black"
            android:textSize="16sp" />

      </androidx.cardview.widget.CardView>

    </LinearLayout>




  </LinearLayout>


  <LinearLayout
      android:visibility="gone"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">


      <TextView
          android:id="@+id/datasheet"
          android:layout_marginTop="5dp"
          android:padding="16dp"
          android:textSize="@dimen/title_size"
          android:gravity="center"
          android:elevation="10dp"
          android:textColor="@color/white"
          android:background="@drawable/detials_side_bg"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:text="DATA SHEET" />

  </LinearLayout>

  <LinearLayout
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginTop="20dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_margin="5dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATE STORE" />
    </androidx.cardview.widget.CardView>



</LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:gravity="center"
      android:padding="10dp"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:layout_marginTop="5dp"
      android:fontFamily="@font/lato_bold"
      android:text="SPECIFICATIONS"

      android:layout_height="wrap_content"/>
  <LinearLayout
      android:id="@+id/ll_data"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  </LinearLayout>

  <TextView
      android:layout_width="200dp"
      android:gravity="center"
      android:layout_gravity="center_horizontal"
      android:padding="12dp"
      android:textColor="@color/white"
      android:textSize="18sp"
      android:background="@drawable/more_button_bg"
      android:id="@+id/txt_more"
      android:layout_margin="20dp"
      android:fontFamily="@font/lato_bold"
      android:text="More Specifications"
      android:layout_height="wrap_content"/>

</LinearLayout>

</ScrollView>