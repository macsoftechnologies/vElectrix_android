<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.SplashScreenActivity">

  <androidx.viewpager.widget.ViewPager
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="400dp"
      android:id="@+id/view_pager"/>

<!--  <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:id="@+id/dot2"-->
<!--      android:layout_marginTop="10dp"-->
<!--      app:dotsColor="@android:color/holo_orange_light"-->
<!--      app:selectedDotColor="@android:color/holo_orange_dark"-->
<!--      app:dotsSize="15dp"-->
<!--      app:dotsSpacing="5dp"-->
<!--      app:stiffness="300"/>-->



  <LinearLayout
      android:orientation="vertical"
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:id="@+id/logo_model_name"
        android:layout_margin="5dp"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODEl" />

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_vertical|center"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/price"
        android:layout_margin="5dp"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="600000" />
    </androidx.cardview.widget.CardView>

  </LinearLayout>

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_vertical|center"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/datasheet"
          android:layout_margin="5dp"
          android:textSize="@dimen/title_size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DATA SHEET" />
    </androidx.cardview.widget.CardView>

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:id="@+id/book_test_drive"
        android:layout_margin="5dp"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK TEST DRIVE" />


    <TextView
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATE STORE" />

</LinearLayout>







</LinearLayout>