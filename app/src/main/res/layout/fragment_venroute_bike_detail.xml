<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F7"
    tools:context=".activities.SplashScreenActivity">

  <androidx.viewpager.widget.ViewPager
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:id="@+id/view_pager"/>

  <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
      android:id="@+id/dots_indicator"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:dotsColor="@color/material_white"
      app:dotsCornerRadius="8dp"
      app:dotsSize="12dp"
      app:dotsSpacing="4dp"
      app:dotsWidthFactor="2.5"
      app:selectedDotColor="@color/md_blue_200"
      app:progressMode="true"
      />

<!--  <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:id="@+id/dot2"-->
<!--      android:layout_marginTop="10dp"-->
<!--      app:dotsColor="@android:color/holo_orange_light"-->
<!--      app:selectedDotColor="@android:color/holo_orange_dark"-->
<!--      app:dotsSize="15dp"-->
<!--      app:dotsSpacing="5dp"-->
<!--      app:stiffness="300"/>-->



  <LinearLayout
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_bold"
        android:id="@+id/logo_model_name"
        android:layout_margin="5dp"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODEL" />



    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/price"
        android:textColor="@color/white"
        android:padding="16dp"
        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/detials_side_bg"
        android:textSize="@dimen/title_size"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Rs. 6,00,000" />

  </LinearLayout>

  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">


      <TextView
          android:id="@+id/datasheet"
          android:layout_marginTop="5dp"
          android:padding="16dp"
          android:textSize="@dimen/title_size"
          android:gravity="center"
          android:elevation="10dp"
          android:textColor="@color/white"
          android:background="@drawable/detials_side_bg"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:text="DATA SHEET" />

  </LinearLayout>

  <LinearLayout
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:contentPadding="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/book_test_drive"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK TEST RIDE" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATE STORE" />
    </androidx.cardview.widget.CardView>

</LinearLayout>

</LinearLayout>

</ScrollView>