<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000"
    tools:context=".fragment.NearStoresMapFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_container"
        />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/white_bottomsheet_bg_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="SHOP NAME -CITY "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_timings"
                android:text="SHOP NAME"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/lato_bold"
                android:padding="10dp"
                android:id="@+id/txt_directions"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:text="Directions"
                android:gravity="center"
                android:background="@drawable/green_bg_map"
                android:layout_width="150dp"
                android:layout_height="40dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>